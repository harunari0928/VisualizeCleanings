{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/app/app.tsx"
  ]
}
